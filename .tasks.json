{
	"variables": {
		"tr_test_dir": "/tr_test"
	},
	"tasks": {
		"test": {
			"short_desc": "Run test",
			"commands": ["tests/tr_test {{cliArgs}}"],
			"cwd": "{{taskRoot}}"
		},
		"build": {
			"short_desc": "Build package",
			"commands": ["rm -rf dist", "python3 -m build"],
			"cwd": "{{taskRoot}}"
		},
		"upload-testpypi": {
			"short_desc": "Build package to testpypi",
			"commands": ["python3 -m twine upload --repository testpypi dist/*"],
			"cwd": "{{taskRoot}}"
		},
		"upload-pypi": {
			"short_desc": "Build package to pypi",
			"commands": ["python3 -m twine upload dist/*"],
			"cwd": "{{taskRoot}}"
		},
		"test_pkg_base": {
			"short_desc": "Basic package test",
			"commands": [
				"./test_pkg.sh"
			],
			"c_cwd": "{{tr_test_dir}}",
			"c_shell": false,
			"c_volumes": [
				"{{cwd}}/tests:{{tr_test_dir}}"
			],
			"c_image": "docker.io/library/python:3.9",
			"abstract": true
		},
		"test_pkg_testpypi": {
			"short_desc": "Basic package test from testpypi",
			"base": "test_pkg_base",
			"c_env": {
				"TASK_RUNNER_PKG_TEST_ENV": "1",
				"TEST_PYPI": "1"
			}
		},
		"test_pkg_pypi": {
			"short_desc": "Basic package test from pypi",
			"base": "test_pkg_base",
			"c_env": {
				"TASK_RUNNER_PKG_TEST_ENV": "1",
				"TEST_PYPI": "0"
			}
		}
	},
	"default_task": "test",
	"default_container_tool": "/usr/bin/podman",
	"use_default_include": false
}
