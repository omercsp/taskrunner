{
	"version": {
		"major": 4,
		"minor": 1
	},
	"tasks": {
		"test": {
			"short_desc": "Run test",
			"commands": ["tests/tr_test"],
			"cwd": "{{taskRoot}}"
		},
		"build": {
			"short_desc": "Build package",
			"commands": ["rm -rf dist", "python3 -m build"],
			"cwd": "{{taskRoot}}"
		},
		"upload-testpypi": {
			"short_desc": "Build package",
			"commands": ["python3 -m twine upload --repository testpypi dist/*"],
			"cwd": "{{taskRoot}}"
		},
		"upload-pypi": {
			"short_desc": "Build package",
			"commands": ["python3 -m twine upload dist/*"],
			"cwd": "{{taskRoot}}"
		}
	},
	"default_task": "test",
	"use_default_include": false
}
