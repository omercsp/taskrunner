{
	"version": {
		"major": 0,
		"minor": 1
	},
	"definitions": {
		"cmake_build_dir": "{{TASK_ROOT}}/build",
		"make": "make",
		"make_j": "{{make}} -j",
		"make_clean": "{{make}} clean"
	},
	"tasks": {
		"make-rebuild": {
			"hidden": true,
			"short_desc": "Rebuild using make",
			"commands": ["{{make_clean}}", "{{make_j}}"]
		},
		"make": {
			"hidden": true,
			"short_desc": "Build using make",
			"commands": ["{{make_j}}"]
		},
		"cmake": {
			"hidden": true,
			"short_desc": "Run cmake in build directory",
			"cwd": "{{cmake_build_dir}}",
			"commands": ["cmake .."]
		},
		"cmake-build": {
			"hidden": true,
			"short_desc": "Run cmake build'",
			"commands": ["cmake --build {{cmake_build_dir}} -j8"]
		},
		"build": {
			"include": "g/make"
		},
		"rebuild": {
			"include": "g/make-rebuild"
		}
	},
	"default_container_tool": "/usr/bin/podman"
}
